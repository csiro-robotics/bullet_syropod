<robot name="simple_box">

  <macro name="box_inertia" params="m x y z">
    <inertia ixx="${m*(y*y+z*z)/12}" ixy = "0" ixz = "0" iyy="${m*(x*x+z*z)/12}" iyz = "0" izz="${m*(x*x+z*z)/12}" />
  </macro>

  <link name="box">

    <inertial>
      <mass value="1000.0" />
      <box_inertia m="1000.0" x="0.6" y="0.2" z="0.24"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.12"/>
      <geometry>
        <box size="0.6 0.2 0.24" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.12"/>
      <geometry>
        <box size="0.6 0.2 0.24" />
      </geometry>
    </collision>
  </link>

  <gazebo reference="box">
    <material>Gazebo/Blue</material>
  </gazebo>
</robot>